<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DemoStyleTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="mytheme">
        <item name="android:fontFamily">casual</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="mytheme.bgcolor">
        <item name="android:textColor">#000000</item>
        <item name="android:background">#FFEB3B</item>
    </style>

    <style name="mytheme.bgcolor1">
        <item name="android:backgroundTint">#673AB7</item>
    </style>


    <style name="mytheme1" parent="Theme.AppCompat">
        <item name="android:fontFamily">casual</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">#FFEB3B</item>

    </style>


</resources>